<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <custom-converters>
            <converter type="cz.vhromada.catalog.facade.converters.MediumToIntegerConverter">
                <class-a>cz.vhromada.catalog.dao.entities.Medium</class-a>
                <class-b>java.lang.Integer</class-b>
            </converter>
        </custom-converters>
    </configuration>

    <mapping>
        <class-a>cz.vhromada.catalog.dao.entities.Movie</class-a>
        <class-b>cz.vhromada.catalog.facade.to.MovieTO</class-b>
        <field custom-converter="cz.vhromada.catalog.facade.converters.MediaConverter">
            <a>media</a>
            <b>media</b>
            <a-hint>cz.vhromada.catalog.dao.entities.Medium</a-hint>
            <b-hint>java.lang.Integer</b-hint>
        </field>
    </mapping>
    
     <mapping>
        <class-a>cz.vhromada.catalog.dao.entities.Game</class-a>
        <class-b>cz.vhromada.catalog.facade.to.GameTO</class-b>
        <field>
            <a is-accessible="true">crack</a>
            <b is-accessible="true">crack</b>
        </field>
        <field>
            <a is-accessible="true">serialKey</a>
            <b is-accessible="true">serialKey</b>
        </field>
        <field>
            <a is-accessible="true">patch</a>
            <b is-accessible="true">patch</b>
        </field>
        <field>
            <a is-accessible="true">trainer</a>
            <b is-accessible="true">trainer</b>
        </field>
        <field>
            <a is-accessible="true">trainerData</a>
            <b is-accessible="true">trainerData</b>
        </field>
        <field>
            <a is-accessible="true">editor</a>
            <b is-accessible="true">editor</b>
        </field>
        <field>
            <a is-accessible="true">saves</a>
            <b is-accessible="true">saves</b>
        </field>
    </mapping>

   <mapping>
        <class-a>cz.vhromada.catalog.dao.entities.Program</class-a>
        <class-b>cz.vhromada.catalog.facade.to.ProgramTO</class-b>
        <field>
            <a is-accessible="true">crack</a>
            <b is-accessible="true">crack</b>
        </field>
        <field>
            <a is-accessible="true">serialKey</a>
            <b is-accessible="true">serialKey</b>
        </field>
    </mapping>

</mappings>
