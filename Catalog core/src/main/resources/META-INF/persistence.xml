<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="CatalogPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>cz.vhromada.catalog.entities.Movie</class>
        <class>cz.vhromada.catalog.entities.Show</class>
        <class>cz.vhromada.catalog.entities.Season</class>
        <class>cz.vhromada.catalog.entities.Episode</class>
        <class>cz.vhromada.catalog.entities.Game</class>
        <class>cz.vhromada.catalog.entities.Music</class>
        <class>cz.vhromada.catalog.entities.Song</class>
        <class>cz.vhromada.catalog.entities.Program</class>
        <class>cz.vhromada.catalog.entities.Genre</class>
    </persistence-unit>

</persistence>
