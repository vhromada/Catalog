<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="CatalogPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>cz.vhromada.catalog.domain.Movie</class>
        <class>cz.vhromada.catalog.domain.Show</class>
        <class>cz.vhromada.catalog.domain.Season</class>
        <class>cz.vhromada.catalog.domain.Episode</class>
        <class>cz.vhromada.catalog.domain.Game</class>
        <class>cz.vhromada.catalog.domain.Music</class>
        <class>cz.vhromada.catalog.domain.Song</class>
        <class>cz.vhromada.catalog.domain.Program</class>
        <class>cz.vhromada.catalog.domain.Genre</class>
    </persistence-unit>

</persistence>
