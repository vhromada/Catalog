@import '../../../bower_components/bootstrap/dist/css/bootstrap.css'

header
  margin-left 5px
  font-size 40px
  font-weight bold


.add
  margin-top 10px

#menu
  margin 5px 5px 0
  padding 0
  list-style none
  border 1px solid gray
  background-color lightgray
  border-radius 10px
  ul
    padding 0
    list-style none
    margin 20px 0 0 0
    opacity 0
    visibility hidden
    position absolute
    top 38px
    left 0
    z-index 1
    background-color gray
    border-radius 3px
    li
      float none
      display block
      border 0
      box-shadow 0 1px 0 black
      &:last-child
        box-shadow none
        & > a
          border-radius 0 0 3px 3px
      &:first-child
        & > a
          border-radius 3px 3px 0 0
          &:after
            content ''
            position absolute
            left 40px
            top -6px
            border-left 6px solid transparent
            border-right 6px solid transparent
            border-bottom 6px solid #444444
        a
          &:hover
            &:after
              border-bottom-color gray
    a
      padding 10px
      width 130px
      display block
      white-space nowrap
      float none
      text-transform none
      &:hover
        background-image linear-gradient(#04ACEC, #0186BA)
  &:before
    content ""
    display table
  &:after
    content ""
    display table
    clear both
  li
    float left
    border-right 1px solid black
    position relative
    &:hover
      & > a
        color white
      & > ul
        opacity 1
        visibility visible
        margin 0
  a
    float left
    padding 12px 30px
    color black
    font bold 12px Arial, Helvetica
    text-decoration none

